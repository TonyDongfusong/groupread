<%= form_tag("/login") do %>
	<div class="field">
	  <%= label_tag :email, "邮箱"%>
	  <%= text_field_tag "user[email]" %>
	</div>
	<div class="field">
	  <%= label_tag :password, "密码"%>
	  <%= password_field_tag "user[password]" %>
	</div>
	<%= submit_tag "登录", class: "btn btn-primary" %>
	<span>或者</span><a href="<%= douban_oauth_url %>"><%= image_tag "login_with_douban_32.png" %></a>
<% end %>
